<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Dragon Launcher</title>
    <script>window.$ = window.jQuery = require('./assets/js/jquery.js');</script>
    <link type="text/css" rel="stylesheet" href="./assets/css/boot.css">
    <script src="./assets/js/bootstrap.bundle.min.js"></script>
    <link type="text/css" rel="stylesheet" href="./assets/fontawesome/css/all.min.css">
    <style>
        body {
            background:#1a1a1a;
            color: rgb(177, 177, 177);
        }

        .modal-content {
            margin-top:50px;
            background: #212529;
        }

        .modal-footer {
            border : none;
        }

        .modal-header {
            border : none;
        }

        /* width */
        ::-webkit-scrollbar {
        width: 3px;
        }

        .nopadding {
            margin:0px;
            padding:0px;
        }

        /* Track */
        ::-webkit-scrollbar-track {
        background: transparent;
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
        background: #888;
        }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
        background: #555;
        }

        .btn:focus,.btn:active:focus,.btn.active:focus,
        .btn.focus,.btn:active.focus,.btn.active.focus {
            outline: none !important;
            box-shadow: none !important;
        }
        
        .titlebar .window-controls-container .window-icon-bg.inactive .window-icon {
            opacity: 0 !important;
        }


        @keyframes glowing {
        0% { box-shadow: 0 0 -10px #056de4; }
        40% { box-shadow: 0 0 5px #056de4; }
        60% { box-shadow: 0 0 5px #056de4; }
        100% { box-shadow: 0 0 -10px #056de4; }
        }

        .button-glow {
        animation: glowing 4000ms infinite !important;
        }

        .button-glow:focus {
        animation: glowing 4000ms infinite !important;
        }


        .button-glow:active {
        animation: glowing 4000ms infinite !important;
        }

        .alert-darcarys {
            color: #fff;
            background-color: #0e0e0e;
            border-color: #0e0e0e;
            border-radius: 0px;
        }

    </style>
</head>
<body>
    <div id="main">
        <%- include('settings') %>
        <%- include('landing') %>
            <!-- Install Modal -->
            <div class="modal fade" id="installModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="modalTitleLabel">{Title}</h5>
                    </div>
                    <div id="modalContentLabel" class="modal-body">
                    {content}
                    </div>
                    <div class="modal-footer">
                    <button id="modalButtonLabel" type="button" class="btn btn-primary" data-bs-dismiss="modal">Save changes</button>
                    </div>
                </div>
                </div>
            </div>        
    </div>
    <!-- Loading -->
    <div id="loadingContainer">
        <div class="fixed-bottom">
            <div class="progress" style="border-radius: 0px;background:#191919;height:5px;">
                <div class="progress-bar bg-primary progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:100%;"></div>
              </div>
        </div>
    </div>

    <script>
        const customTitlebar = require('custom-electron-titlebar');

        bar = new customTitlebar.Titlebar({
            icon: './dragon.ico',
            backgroundColor: customTitlebar.Color.fromHex('#2b2b2b'),
            menu: null,
            maximizable: false,
            minimizable: false,
            titleHorizontalAlignment: "left"
        });
    </script>
    <script src="./assets/js/scripts/ui.js"></script>
</body>
</html>